<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Wandelen"
             x:Class="Wandelen.RoutePage">
    <StackLayout Margin="10">
        <!-- Set ListView.SelectionMode to None to disable selection -->
        <ListView ItemsSource="{x:Static local:RoutePage.items}" ItemSelected="OnSelection" IsPullToRefreshEnabled="true" Refreshing="OnRefresh">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.ContextActions>
                            <MenuItem Clicked="GaNaarKaart" Text="Nieuwe route" CommandParameter="{Binding .}" />
                        </ViewCell.ContextActions>
                        <StackLayout Padding="10,0,0,0">
                            <Label Text="{Binding .}" />
                            <Button Margin="0,20,0,0" x:Name="VoorgesteldeRoutes" Clicked="VoorgesteldeRoutes_Click" Text="Ga naar voorgestelde routes" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Voorgestelde routes" Clicked="voorgestelderoutes_clicked"/>
    </StackLayout>




</ContentPage>