<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wandelen.LoginPage">
    <ContentPage.Content>

        <StackLayout Margin="25">
            <StackLayout>
                <Label Text="Log in" Margin="4"></Label>
            </StackLayout>
            <StackLayout>
                <Entry x:Name="Gebruikersnaam" Placeholder="Gebruikersnaam" />
            </StackLayout>
            <StackLayout>
                <Entry x:Name="Wachtwoord" Placeholder="Wachtwoord" IsPassword="true" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Ingelogd blijven" HorizontalOptions="StartAndExpand" Margin="4" />
                <Switch IsToggled="True" HorizontalOptions="End"/>
            </StackLayout>
            <StackLayout>
                <Button x:Name="Inloggen" Text="Inloggen" Pressed="Inloggen_Pressed" Clicked="Inloggen_Clicked" />
                <Button Text="Wachtwoord vergeten" />
            </StackLayout>

        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>